  {
  "rules": {
    "rides": {
      "$rideId": {
        ".read": "auth != null && (data.child('userId').val() == auth.uid || data.child('driverId').val() == auth.uid)",
        ".write": "auth != null && (data.child('userId').val() == auth.uid || data.child('driverId').val() == auth.uid)",
        "userPhone": {
          ".read": "auth != null && data.parent().child('userId').val() == auth.uid"
        },
        "userEmail": {
          ".read": "auth != null && data.parent().child('userId').val() == auth.uid"
        }
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    }
  }
}